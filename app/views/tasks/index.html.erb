<h1>My Tasks:</h1>
<h2><%= link_to "Create a Task", tasks_new_path %></h2>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to "#{task.title}", task_path(task) %> -
    <%= link_to "Delete Task", task_path(task), method: :delete,
    data: { confirm: "You Are About to delete the task are you sure?" } %></li>
  <% end %>
</ul>
